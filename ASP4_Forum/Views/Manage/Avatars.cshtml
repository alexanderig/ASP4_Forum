@model IEnumerable<ASP4_Forum.Models.Avatars>


    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title">Choose your avatar</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <div class="row hidden-md-up">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3">
                            <div class="card mb-3">
                                <div class="embed-responsive embed-responsive-1by1">

                                    <a class="avatarlink" href="/Manage/Avatars?AvatarUrl=@item.AvatarUrl">
                                        <img class="card-img-top embed-responsive-item" src="@item.AvatarUrl"
                                             alt="Card image cap">
                                    </a>
                                </div>

                            </div>
                        </div>
                    }

                </div>




                <div class="modal-footer">

                    <button type="submit" id="save" value="Save" class="btn btn-success col mr-auto">Save</button>
                    <button type="button" class="btn btn-warning col" id="btnCloseIt" data-dismiss="modal">Close</button>
                </div>





            </div>

        </div>
        <input type="hidden" value="@ViewBag.userId" id="getuserid">
    </div>


<script type="text/javascript">

    


    $('.avatarlink').click(function (e) {
        e.preventDefault();
        var myserver = $.connection.forumHub;
        var path = this.href;
        path = path.substring(path.indexOf("=") + 1);
        myserver.server.changeAvatar(path, $('#getuserid').val());
        $('#modalD').modal('hide');
